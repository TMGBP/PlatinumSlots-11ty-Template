<script>
function toggleDropdown() {
  const dropdownMenu = document.getElementById('dropdown-menu');
  dropdownMenu.style.display = dropdownMenu.style.display === 'block' ? 'none' : 'block';
}

function changeLanguage(lang) {
  const currentLanguage = document.getElementById('current-language');
  const currentFlag = document.querySelector('.language-button .flag-icon');
  if (lang === 'de') {
    currentLanguage.textContent = 'DE';
    currentFlag.src = '/assets/language/de.svg';
    window.location.href = '/de';
  } else if (lang === 'en') {
    currentLanguage.textContent = 'EN';
    currentFlag.src = '/assets/language/en.svg';
    window.location.href = '/';
  }
}
</script>
