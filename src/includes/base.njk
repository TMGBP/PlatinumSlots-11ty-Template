<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Select the "Mehr Zeigen" button
    var showMoreButton = document.querySelector(".description__button");
    // Select the content section to be expanded
    var contentSection = document.querySelector(".description__collapse");

    // Check if the button and content section exist
    if (showMoreButton && contentSection) {
      // Add a click event listener to the button
      showMoreButton.addEventListener("click", function() {
        // Toggle the 'collapse--entered' class on the content section
        contentSection.classList.toggle("collapse--entered");

        // Change the button text
        if (contentSection.classList.contains("collapse--entered")) {
          showMoreButton.textContent = "Weniger Zeigen";
          // Apply the desired styles
          contentSection.style.transitionDuration = "300ms";
          contentSection.style.height = "auto";
        } else {
          showMoreButton.textContent = "Mehr Zeigen";
          // Reset the styles
          contentSection.style.transitionDuration = "";
          contentSection.style.height = "";
        }
      });
    }
  });
</script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.collapse-block__toggle');

    faqItems.forEach(item => {
        item.addEventListener('click', function() {
            const collapseContent = this.nextElementSibling;
            
            // Toggle the "active" class on the clicked item
            this.classList.toggle('active');
            
            // Add or remove the 'collapse--entered' class
            if (collapseContent.classList.contains('collapse--entered')) {
                collapseContent.classList.remove('collapse--entered');
                collapseContent.style.height = '0'; // Collapses the content
            } else {
                collapseContent.classList.add('collapse--entered');
                collapseContent.style.height = collapseContent.scrollHeight + 'px'; // Expands to the full height of the content
            }
        });
    });
});
</script>
<script>
// Select the button to close the menu
const closeButton = document.querySelector('.bar__close-icon.font-icons.font-icons--close');

// Select the element with the class "bar"
const bar = document.querySelector('.bar');

// Select the element with the class "bar__content"
const barContent = document.querySelector('.bar__content');

// Select the body element
const body = document.querySelector('.body.body--de');

// Add event listener for the click event on the close button
closeButton.addEventListener('click', function() {
    // Remove the "bar--open" class from the bar element
    bar.classList.remove('bar--open');

    // Remove the "bar__content--open" class from the bar content element
    barContent.classList.remove('bar__content--open');

    // Revert the body overflow styling
    body.style.overflow = '';
});

// Add event listener for the menu button to open the menu
const menuButton = document.querySelector('.text-btn.text-btn--primary.header__icon.header__icon--menu');

menuButton.addEventListener('click', function() {
    // Check if "bar--open" is currently active
    const isOpen = bar.classList.contains('bar--open');

    // Toggle the "bar--open" class on the bar element
    bar.classList.toggle('bar--open', !isOpen); // Open if it's closed

    // Toggle the "bar__content--open" class on the bar content element
    barContent.classList.toggle('bar__content--open', !isOpen); // Open if it's closed

    // Manage the body overflow styling
    if (!isOpen) {
        // If the bar was not open, apply the styles to body
        body.style.overflow = 'hidden';
    } else {
        // If the bar was open, revert the styles
        body.style.overflow = '';
    }
});

</script>

