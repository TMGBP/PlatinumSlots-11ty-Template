    <!-- Inline Styles -->
    <style>
        /* Basic styles */
        body { margin: 0; }
        body #canvas { background: {{ settings.background }}; }
        body #html-spinner { display: none; }

        /* Loading Spinner */
        #canvas {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: fixed;
        }
        #html-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid #d3d3d3;
            border-top: 4px solid #000;
            border-radius: 50%;
            animation: rotate 1.2s infinite linear;
        }
        @keyframes rotate {
            from { transform: rotate(0); }
            to { transform: rotate(360deg); }
        }
    </style>

